<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="OK" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onClickBtnOk"/>
    <TextField fx:id="txtFld" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="200" onKeyPressed="#enterPress"/>
    <TextArea fx:id="txtArea" GridPane.rowIndex="0" prefWidth="200" editable="false"/>
</GridPane>